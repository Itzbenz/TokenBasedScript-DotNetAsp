@model IEnumerable<TokenBasedScript.Models.Settings>

@{
    ViewData["Title"] = "Settings";
    Layout = "_Default";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefaultValueString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateModified)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultValueString)
        </td>
        <td>
            @{
                if (string.IsNullOrEmpty(item.ValueString))
                {
                    item.ValueString = item.DefaultValueString;
                }
                if (item.ValueString?.Length > 20)
                {
                    item.ValueString = item.ValueString.Substring(0, 20)  + "...";
                }
            }
            @Html.DisplayFor(modelItem => item.ValueString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateModified)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Name">Edit</a>
        </td>
    </tr>
}
    </tbody>
</table>
