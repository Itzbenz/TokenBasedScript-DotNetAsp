@model TokenBasedScript.Models.Settings

@{
    ViewData["Title"] = "Edit " + Model.Name;
    Layout = "_Default";
}

<h1>@Model.Name</h1>

<h4>Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input readonly="readonly" asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultValueString" class="control-label"></label>
                <input readonly="readonly" asp-for="DefaultValueString" class="form-control" />
                <span asp-validation-for="DefaultValueString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueString" class="control-label"></label>
                <input asp-for="ValueString" class="form-control" />
                <span asp-validation-for="ValueString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
