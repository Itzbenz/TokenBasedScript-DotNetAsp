<div class="card mb-6">
<header class="card-header">
    <p class="card-header-title">
        <span class="icon">
            <i class="mdi mdi-ballot"></i>
        </span>
        Forms
    </p>
</header>
<div class="card-content">
<form method="post" action="@Url.Action("NikeBRT", "Script")">
<div class="field">
    <label class="label">Delivery Contact</label>
    <div class="field-body">
        <div class="field">
            <div class="control icons-left">
                <input class="input" placeholder="Order Number" type="text" value="@ViewBag.Order?.orderNumber" name="orderNumber"/>
                <span class="icon left">
                    <i class="mdi mdi-numeric"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <div class="control icons-left icons-right">
                <input class="input" placeholder="Order Email" type="email" name="orderEmail" value="@ViewBag.Order?.orderEmail"/>
                <span class="icon left">
                    <i class="mdi mdi-mail"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <div class="control icons-left icons-right">
                <input class="input" placeholder="Name" type="text" name="name" value="@ViewBag.Order?.vasBrtForm.name"/>
                <span class="icon left">
                    <i class="mdi mdi-account"></i>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="field">
<label class="label">Delivery Information</label>
