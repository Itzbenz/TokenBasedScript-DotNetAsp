@model User

@{
    ViewData["Title"] = "Nike BRT";
    Layout = "_Layout";
}
<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            Nike BRT Script
        </h1>
    </div>
    <div>
        <p class="lead">You have @Model.TokenLeft tokens left.</p>
    </div>
</section>


